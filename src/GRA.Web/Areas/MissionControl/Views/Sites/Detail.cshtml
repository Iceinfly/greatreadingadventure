@model GRA.Controllers.ViewModel.MissionControl.Sites.SiteDetailViewModel

@section styles {
    <link rel="stylesheet" href="/css/markdown.min.css" />
}

@await Html.PartialAsync("_SitePartial")

<form asp-controller="Sites" asp-action="Detail" method="post" role="form">
    <input asp-for="Id" type="hidden" />
    <div class="row row-spacing">
        <div class="col-xs-12">
            <badge asp-for="Name" class="col-form-label"></badge>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <badge asp-for="Path" class="col-form-label"></badge>
            <input asp-for="Path" type="text" class="form-control" />
            <span asp-validation-for="Path" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <badge asp-for="PageTitle" class="col-form-label"></badge>
            <input asp-for="PageTitle" type="text" class="form-control" />
            <span asp-validation-for="PageTitle" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <badge asp-for="MetaDescription" class="col-form-label"></badge>
            <input asp-for="MetaDescription" type="text" class="form-control" />
            <span asp-validation-for="MetaDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <badge asp-for="Footer" class="col-form-label"></badge>
            <div id="wmd-button-bar"></div>
            <textarea asp-for="Footer" id="wmd-input" class="form-control wmd-input" style="height:200px;"></textarea>
            <br /><badge class="col-form-label">Footer Preview</badge>
            <div id="preview"></div>
            <span asp-validation-for="Footer" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-secondary">Return to List</a>
        <button type="submit"
                id="Submit"
                name="Submit"
                value="Submit"
                class="btn btn-primary btn-spinner"
                button-spinner>
            <span class="buttonText">Save</span>
        </button>
    </div>
</form>

@section scripts {
    <script src="/js/markdown.min.js" ></script>

    <script>
        var editor = new Markdown.Editor({ allowUploads: true, allowImages: false });
        editor.run();
    </script>
}