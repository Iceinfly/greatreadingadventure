@model GRA.Controllers.ViewModel.MissionControl.Sites.SiteSocialMediaViewModel

@await Html.PartialAsync("_SitePartial")

<form asp-controller="Sites" asp-action="SocialMedia" method="post" role="form">
    <input asp-for="Id" type="hidden" />

    <div class="row row-spacing">
        <div class="col-xs-12 col-sm-6">
            <label asp-for="TwitterAvatarMessage" class="control-label"></label>
            <span class="fa fa-question-circle-o wide-tooltip" title="Default text for when a participant shares their avatar on Twitter" data-toggle="tooltip" data-placement="top"></span>
            <input asp-for="TwitterAvatarMessage" type="text" class="form-control" />
            <span asp-validation-for="TwitterAvatarMessage" class="text-danger"></span>
        </div>
        <div class="col-xs-12 col-sm-6">
            <label asp-for="TwitterAvatarHashtags" class="control-label"></label>
            <span class="fa fa-question-circle-o wide-tooltip" title="Hashtag to include when a participant shares their avatar on Twitter" data-toggle="tooltip" data-placement="top"></span>
            <input asp-for="TwitterAvatarHashtags" type="text" class="form-control" />
            <span asp-validation-for="TwitterAvatarHashtags" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <label asp-for="AvatarCardDescription" class="control-label"></label>
            <span class="fa fa-question-circle-o wide-tooltip" title="Default text for when a participant shares their avatar on an Open Graph site such as Facebook" data-toggle="tooltip" data-placement="top"></span>
            <input asp-for="AvatarCardDescription" type="text" class="form-control" />
            <span asp-validation-for="AvatarCardDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-default">Return to List</a>
        <button type="submit" id="Submit" name="Submit" value="Submit" class="btn btn-primary btn-spinner">
            <span class="buttonText">Save</span>
            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
        </button>
    </div>
</form>