@model GRA.Controllers.ViewModel.MissionControl.DailyTips.TipDetailViewModel
@using GRA.Controllers.ViewModel.MissionControl.DailyTips

<h2>Tip: @Model.Tip.Name</h2>
<p>@Model.Tip.Message</p>

<div class="row py-4">
    <div class="col-12">
        <a class="btn btn-outline-success"
           asp-action="Add"
           asp-route-tipId="@Model.Tip.Id">
            <span class="far fa-file-archive fa-fw"></span>
            Add new Daily Tips
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table link-table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Preview</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Images?.Any() != true)
                {
                    <tr>
                        <td colspan="5">
                            <div class="alert alert-warning mb-0">No images found.</div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var image in Model.Images)
                    {
                        var currentIndex = Model.AllImageIds.IndexOf(image.Id);
                        var isFirstOverall = currentIndex == 0;
                        var isLastOverall = currentIndex == Model.AllImageIds.Count - 1;

                        <tr>
                            <td>@image.Day</td>
                            <td>
                                <img src="@Url.Content($"~/{image.ImagePath}")"
                                     alt="@image.Name"
                                     style="max-height: calc(50vh - 100px); overflow-y:auto;" />
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <form asp-action="DeleteImage"
                                          asp-route-imageId="@image.Id"
                                          asp-route-tipId="@Model.Tip.Id"
                                          method="post"
                                          class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" button-spinner>
                                            <span class="fas fa-times fa-fw" aria-hidden="true"></span>
                                        </button>
                                    </form>

                                    <button type="button"
                                            class="btn btn-outline-secondary btn-sm decreasePosition" button-spinner
                                            data-id="@image.Id"
                                            disabled="@(isFirstOverall ? "disabled" : null)">
                                        <span class="fas fa-arrow-up fa-fw"></span>
                                    </button>

                                    <button type="button"
                                            class="btn btn-outline-secondary btn-sm increasePosition" button-spinner
                                            data-id="@image.Id"
                                            disabled="@(isLastOverall ? "disabled" : null)">
                                        <span class="fas fa-arrow-down fa-fw"></span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <paginate paginateModel="@Model"></paginate>
    </div>
</div>

@section Scripts {
    <script>
        const decreasePositionUrl = '@Url.Action(nameof(DailyTipsController.MoveImageUp), DailyTipsController.Name)';
        const increasePositionUrl = '@Url.Action(nameof(DailyTipsController.MoveImageDown), DailyTipsController.Name)';

        function AdjustPosition(e) {
            const button = $(e.currentTarget);
            const child = button.children("span");

            const increment = button.hasClass("increasePosition");
            const id = button.data("id");
            const url = increment ? increasePositionUrl : decreasePositionUrl;

            const currentRow = button.closest("tr");
            currentRow.addClass("table-info");
            child.removeClass("fa-arrow-up fa-arrow-down").addClass("fa-pulse");

            $.post(url, { id: id })
                .done(function (success) {
                    if (success === true || success === "true") {
                        location.reload();
                    } else {
                        alert("Error moving image.");
                        resetSpinners();
                    }
                })
                .fail(function (xhr, status, error) {
                    alert("Error moving image.");
                    resetSpinners();
                });
        }

        $(".increasePosition").on("click", AdjustPosition);
        $(".decreasePosition").on("click", AdjustPosition);
    </script>
}