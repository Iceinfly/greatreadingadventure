@using GRA.Controllers.ViewModel.MissionControl
@model SystemInformationViewModel

<div class="row mb-2">
    <div class="col-12 col-lg-3 d-flex justify-content-center">
        <a href="https://www.greatreadingadventure.com/" target="_blank">
            <img src="~/images/great-reading-adventure-logo@1x.png"
                 class="img-fluid" />
        </a>
    </div>
    <div class="col-12 col-lg-9">
        <table class="table table-striped table-bordered table-sm mt-5">
            <tbody>
                @foreach (var key in Model.Settings.Keys)
                {
                    <tr>
                        <th>@key</th>
                        <td>@Model.Settings[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row mb-2">
    <div class="col-12 col-xl-6">
        <h3>Versions</h3>
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Version</th>
                </tr>
            </thead>
            <tbody>
                <tr class="info">
                    <td>@Model.Assembly</td>
                    <td>@Model.Version</td>
                </tr>
                @foreach (var key in Model.Assemblies.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>
                            @Html.Raw(SystemInformationViewModel.FormatVersion(Model.Assemblies[key]))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-12 col-xl-6">
        <h3>Runtime Settings</h3>
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>Setting</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var key in Model.RuntimeSettings.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>@Model.RuntimeSettings[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
