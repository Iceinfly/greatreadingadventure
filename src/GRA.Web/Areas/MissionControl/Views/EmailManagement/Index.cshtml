@model GRA.Controllers.ViewModel.MissionControl.EmailManagement.EmailIndexViewModel

<div class="modal fade" id="sendTestModal" tabindex="-1" role="dialog" aria-labelledby="sendTestModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="@nameof(EmailManagementController.SendEmailTest)" method="post" role="form" style="display:inline">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="sendTestModalHeader">Send Test</h4>
                </div>
                <div class="modal-body">
                    <span id="modal-text">Please enter the email addresses (comma separated)</span>
                    <div class="form-group">
                        <label asp-for="SendTestRecipients" class="control-label"></label>
                        <textarea asp-for="SendTestRecipients" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                    <button type="submit" class="btn btn-primary pull-right" aria-label="Confirm">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="sendModal" tabindex="-1" role="dialog" aria-labelledby="sendModalLabel">
    <div class="modal-dialog" role="document">
        <form asp-action="@nameof(EmailManagementController.SendEmail)" method="post" role="form" style="display:inline">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="sendModalHeader">Send Email</h4>
                </div>
                <div class="modal-body">
                    <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                    <span id="modal-text">You are about to send this email to x subscribed participants</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                    <button type="submit" class="btn btn-danger pull-right" aria-label="Confirm">
                        Ok
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        <a asp-action="@nameof(EmailManagementController.Create)" class="btn btn-default">Add</a>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.EmailTemplates.Count() == 0)
        {
            <div class="alert alert-warning">No Pages</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered link-table">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Emails Sent</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                            @if (Context.User.HasClaim(GRA.ClaimType.Permission, nameof(GRA.Domain.Model.Permission.SendBulkEmails)))
                            {
                                <th>&nbsp;</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in Model.EmailTemplates)
                        {
                            <tr>
                                <td class="td-class">
                                    @template.Description
                                </td>
                                <td>
                                    @template.EmailsSent
                                </td>
                                <td class="on-top gra-mc-icon">
                                    <a asp-action="@nameof(EmailManagementController.Edit)"
                                       asp-route-id="@template.Id"
                                       class="btn btn-primary btn-sm">
                                        <span class="fa fa-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td>
                                    <button class="btn btn-default testEmail"
                                            data-toggle="modal"
                                            data-target="#sendTestModal"
                                            data-id="@template.Id"
                                            data-descr="@template.Description">
                                        Send Test
                                    </button>
                                </td>
                                @if (Context.User.HasClaim(GRA.ClaimType.Permission, nameof(GRA.Domain.Model.Permission.SendBulkEmails)))
                                {
                                    <td>
                                        @if (template.EmailsSent <= 0)
                                        {
                                            <button class="btn btn-default sendEmail"
                                                    data-toggle="modal"
                                                    data-target="#sendModal"
                                                    data-id="@template.Id"
                                                    data-descr="@template.Description">
                                                Send Email
                                            </button>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@section scripts
    {
<script>
    $(".sendEmail").on("click", function () {
        $("#sendModal").find("#sendModalHeader").text("Send Email " + $(this).data("descr"));

    });
    $(".testEmail").on("click", function () {
        $("#sendTestModal").find("#sendTestModalHeader").text("Send Test " + $(this).data("descr"));

    });
</script>
}
