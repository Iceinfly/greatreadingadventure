@model IEnumerable<SelectListItem>

@await Html.PartialAsync("_VendorCodePartial")

<form asp-controller="@VendorCodesController.Name"
      asp-action="@nameof(VendorCodesController.ImportStatus)"
      method="post"
      role="form"
      enctype="multipart/form-data">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 mb-3">
            <label for="vendorCodeTypeId">Vendor code:</label>
            <select id="vendorCodeTypeId"
                    name="vendorCodeTypeId"
                    asp-items="@Model"
                    class="form-select"></select>
        </div>
        <div class="col-12 col-md-8 offset-md-2">
            <label for="selectedFile">Select an Order Status Report file (.xls or .xlsx):</label>
            <div class="input-group mb-3">
                <input accept=".xls,.xlsx"
                       id="excelFile"
                       name="excelFile"
                       class="form-control"
                       type="file" />
                <button class="btn btn-outline-secondary" onclick="$('#excelFile').val('')"
                        type="button">
                    Clear selection
                </button>
            </div>
        </div>
        <div class="col-12 col-md-8 offset-md-2 d-flex justify-content-end">
            <button type="submit"
                    class="btn btn-outline-primary"
                    button-spinner
                    data-bs-toggle="modal"
                    data-bs-target="#importModal">
                <span class="fas fa-fw fa-upload"></span>
                Upload status update
            </button>
        </div>
    </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="importModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title h4">Uploading vendor status file for import...</h1>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active"
                         role="progressbar"
                         aria-valuenow="100"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         style="width: 100%">
                        <span class="sr-only">Importing Vendor Status Updates</span>
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
