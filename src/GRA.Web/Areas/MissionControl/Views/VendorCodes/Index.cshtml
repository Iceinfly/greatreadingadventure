@model GRA.Domain.Model.VendorCodeStatus

@await Html.PartialAsync("_VendorCodePartial")

<div class="row">
    <div class="col-12 col-sm-10 col-lg-8">
        <h2>Status</h2>
        <table class="table table-striped table-bordered table-sm">
            <tr class="table-info">
                <th>Assigned vendor codes</th>
                <td>@Model.AssignedCodes.ToString("N0")</td>
                <td>@Model.Percent(Model.AssignedCodes, Model.All, "of total")</td>
            </tr>
            <tr>
                <th>Unassigned vendor codes</th>
                <td>@Model.UnusedCodes.ToString("N0")</td>
                <td>@Model.Percent(Model.UnusedCodes, Model.All, "of total")</td>
            </tr>
            <tr class="table-warning">
                <th>Reassigned vendor codes</th>
                <td>@Model.ReassignedCodes.ToString("N0")</td>
                <td>@Model.Percent(Model.ReassignedCodes, Model.All, "of total")</td>
            </tr>
            <tr class="table-danger">
                <th>Codes assigned to deleted users</th>
                <td>@((Model.All - Model.TotalCodes).ToString("N0"))</td>
                <td>@Model.Percent(Model.All - Model.TotalCodes, Model.All, "of total")</td>
            </tr>
            <tr class="table-success">
                <th>Total vendor codes</th>
                <td>@Model.All.ToString("N0")</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td colspan="3">&nbsp;</td>
            </tr>
            <tr>
                <th>Assigned &amp; donated</th>
                <td>@Model.Donated.ToString("N0")</td>
                <td>@Model.Percent(Model.Donated, Model.AssignedCodes, "of assigned")</td>
            </tr>
            <tr>
                <th>Assigned &amp; vendor redemption selected</th>
                <td>@Model.VendorSelected.ToString("N0")</td>
                <td>@Model.Percent(Model.VendorSelected, Model.AssignedCodes, "of assigned")</td>
            </tr>
            <tr>
                <td colspan="3">&nbsp;</td>
            </tr>
            <tr>
                <th>Assigned with no order, ship, or arrival date</th>
                <td>@Model.NoStatus.ToString("N0")</td>
                <td>@Model.Percent(Model.NoStatus, Model.VendorSelected, "of vendor selected")</td>
            </tr>
            <tr>
                <th>Ordered Items</th>
                <td>@Model.Ordered.ToString("N0")</td>
                <td>@Model.Percent(Model.Ordered, Model.VendorSelected, "of vendor selected")</td>
            </tr>
            <tr>
                <td colspan="3">&nbsp;</td>
            </tr>
            <tr class="table-info">
                <th>Shipped Items</th>
                <td>@Model.Shipped.ToString("N0")</td>
                <td>@Model.Percent(Model.Shipped, Model.Ordered, "of ordered")</td>
            </tr>
            <tr class="table-success">
                <th>Arrived Items</th>
                <td>@Model.Arrived.ToString("N0")</td>
                <td>@Model.Percent(Model.Arrived, Model.Shipped, "of shipped")</td>
            </tr>
            @if (Model.EmailAwardSelected > 0)
            {
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr class="table-info">
                    <th>Email award selected</th>
                    <td>@Model.EmailAwardSelected.ToString("N0")</td>
                    <td>
                        @Model.Percent(Model.EmailAwardSelected, Model.AssignedCodes, "of assigned")
                    </td>
                </tr>
                <tr>
                    <th>Email award pending download</th>
                    <td>@Model.EmailAwardPendingDownload.ToString("N0")</td>
                    <td>
                        @Model.Percent(Model.EmailAwardPendingDownload, Model.EmailAwardSelected, "of email selected")
                    </td>
                </tr>
                <tr>
                    <th>Email award downloaded in report</th>
                    <td>@Model.EmailAwardDownloadedInReport.ToString("N0")</td>
                    <td>
                        @Model.Percent(Model.EmailAwardDownloadedInReport, Model.EmailAwardSelected, "of email selected")
                    </td>
                </tr>
                <tr class="table-success">
                    <th>Email award sent</th>
                    <td>@Model.EmailAwardSent.ToString("N0")</td>
                    <td>
                        @Model.Percent(Model.EmailAwardSent, Model.EmailAwardSelected, "of email selected")
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

