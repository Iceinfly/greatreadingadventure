@model GRA.Controllers.ViewModel.MissionControl.Systems.RemoveBranchViewModel

<form method="post" asp-action="@nameof(SystemsController.RemoveBranch)">
    <input type="hidden" asp-for="BranchId" value="@Model.BranchId" />
    <div class="row mt-2">
        <div class="col-12 col-lg-10 offset-lg-1 mb-3">
            <div class="card">
                <h5 class="card-header">
                    Remove Branch
                </h5>
                <div class="card-body">
                    <table class="table table-bordered table-sm table-striped">
                        <tr>
                            <th>Branch name:</th>
                            <td>@Model.Branch.Name</td>
                        </tr>
                        <tr>
                            <th>Participants at this branch:</th>
                            <td>@Model.InUseCount</td>
                        </tr>
                        @if (Model.InUseCount > 0)
                        {
                            <tr>
                                <th class="align-middle">Reassign participants to:</th>
                                <td>
                                    <select asp-for="ReassignBranch"
                                            asp-items="Model.BranchList"
                                            class="form-select"></select>
                                </td>
                            </tr>
                        }
                    </table>

                    <p>When you click the button below the software will attempt to:</p>
                    <ul>
                        <li class="mc-extra-height">
                            Reassign all participants/staff who have selected
                            <strong>@Model.Branch.Name</strong> to the branch you've selected above.
                        </li>
                        <li class="mc-extra-height">
                            Attempt to delete <strong>@Model.Branch.Name</strong>
                        </li>
                        <li class="mc-extra-height">
                            It will be unable to delete the branch if it has any of the following
                            assigned to it, so please <strong>verify first</strong>:
                            <ul>
                                <li>Challenges</li>
                                <li>Drawings</li>
                                <li>Drawing Criteria</li>
                                <li>Events</li>
                                <li>Program Scheduling</li>
                                <li>Questionnaires</li>
                                <li>Report Criteria</li>
                                <li>Triggers</li>
                                <li>Vendor Codes</li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <button button-spinner class="btn btn-outline-danger">Delete Branch</button>
                </div>
            </div>
        </div>
    </div>
</form>
