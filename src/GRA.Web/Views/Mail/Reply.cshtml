@model GRA.Controllers.ViewModel.Mail.MailCreateViewModel

<form asp-controller="Mail" asp-action="Reply" method="post" role="form">
    <input asp-for="InReplyToId" type="hidden" />
    <input asp-for="InReplyToSubject" type="hidden" />

    <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="lead">
                        <strong><badge asp-for="InReplyToSubject"></badge></strong>
                        @Model.InReplyToSubject
                    </span>
                </div>
                <div class="panel-body">
                    <div class="row row-spacing">
                        <div class="col-sm-10 col-sm-offset-1">
                            <badge asp-for="Subject" class="col-form-label"></badge>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row row-spacing">
                        <div class="col-sm-10 col-sm-offset-1">
                            <badge asp-for="Body" class="col-form-label"></badge>
                            <textarea asp-for="Body" class="form-control"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <a asp-action="Index" class="btn btn-secondary">
                                @SharedLocalizer[GRA.Annotations.Interface.BackToMailbox]
                            </a>
                            <a asp-action="Read"
                               asp-route-id="@Model.InReplyToId"
                               class="btn btn-secondary">
                                @SharedLocalizer[GRA.Annotations.Interface.Back]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                @SharedLocalizer[GRA.Annotations.Interface.SendReply]
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
