@model string
@section metadata {
    <grasite property="metadescription"></grasite>
    <grasite property="dcmetadata"></grasite>
    <grasite property="twittermetadata"></grasite>
    <grasite property="facebookmetadata"></grasite>
}
<div class="row" style="margin-bottom: 1em;">
    <div class="col-xs-12">
        <img src="~/images/meadow.jpg"
             alt="Illustration of a meadow."
             class="img-responsive img-rounded"
             style="width: 100%;"
             srcset="@Url.Content("~/images/meadow.jpg") 1x, @Url.Content("~/images/meadow@2x.jpg") 2x"
             asp-append-version="true" />
    </div>
</div>
<div class="row" style="margin-top: 2em; font-size: larger;">
    <div class="col-sm-3">
        <p>@SharedLocalizer[GRA.Annotations.Home.ForMoreInformation]</p>
        <p>@SharedLocalizer[GRA.Annotations.Home.GoOnAJourney]</p>
    </div>
    <div class="col-sm-6">
        <p>
            @SharedLocalizer[GRA.Annotations.Home.WelcomeTo, Model]
            @SharedLocalizer[GRA.Annotations.Home.StartsSoon]
            <div class="row" style="margin-top: 2em;">
                <div class="col-sm-6" style="margin-top: 0.5em;">
                    <a asp-controller="Join"
                       asp-action="Index"
                       class="btn btn-primary btn-block btn-lg">
                        <span class="fa fa-book"></span>
                        @SharedLocalizer[GRA.DisplayNames.JoinNow]
                    </a>
                </div>
                <div class="col-sm-6" style="margin-top: 0.5em;">
                    <a asp-controller="SignIn"
                       asp-action="Index"
                       class="btn btn-success btn-block btn-lg">
                        <span class="fa fa-sign-in"></span>
                        @SharedLocalizer[GRA.DisplayNames.SignIn]
                    </a>
                </div>
            </div>
        </p>
    </div>
    <div class="col-sm-3">
        <p>@SharedLocalizer[GRA.Annotations.Home.Read20]</p>
        <p>@SharedLocalizer[GRA.Annotations.Home.ReadingIsFundamental]</p>
    </div>
</div>
