@model GRA.Domain.Model.GroupInfo
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form asp-action="GroupDetails">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@SharedLocalizer[GRA.Annotations.Title.UpdateGroupDetails]</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupTypeName" class="control-label"></label>
                        <input asp-for="GroupTypeName" class="form-control" readonly disabled />
                    </div>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <a class="btn btn-danger" href="@Url.Action("Household")">@SharedLocalizer[GRA.Annotations.Interface.Cancel]</a>
                        <button type="submit" class="btn btn-success">@SharedLocalizer[GRA.Annotations.Interface.Save]</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
