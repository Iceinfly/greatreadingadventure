@model GRA.Controllers.ViewModel.Profile.HouseholdRegisterViewModel

<form asp-controller="@ProfileController.Name"
      asp-action="@nameof(ProfileController.RegisterHouseholdMember)"
      method="post"
      role="form">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <span class="fw-bold">
                        Register @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle] Member
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <input asp-for="RegisterId" type="hidden" />
                            <input asp-for="Validate" value="true" type="hidden" />
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="Username" class="col-form-label"></label>
                                    <span id="Username-Icon" class="fas colored-icon d-none"></span>
                                    <input asp-for="Username" class="form-control" autofocus />
                                    <span id="Username-Validation"
                                          asp-validation-for="Username"
                                          class="text-success"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="Password" class="col-form-label"></label>
                                    <input asp-for="Password"
                                           type="password"
                                           class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="ConfirmPassword" class="col-form-label"></label>
                                    <input asp-for="ConfirmPassword"
                                           type="password"
                                           class="form-control" />
                                    <span asp-validation-for="ConfirmPassword"
                                          class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Household" class="btn btn-outline-secondary">
                        Return to @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle]
                    </a>
                    <button type="submit"
                            id="Submit"
                            name="Submit"
                            value="Submit"
                            class="btn btn-outline-primary"
                            button-spinner>
                        <span class="buttonText">Register Member</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts {
    <script>
        $("#Username").on("blur", function () {
            if ($(this).val().trim() != "" && !$(this).hasClass("input-validation-error")) {
                $(this).val($(this).val().trim());
                let usernameCheckUrl = "@Url.Action("UsernameInUse", "Lookup", new { Area = string.Empty })";
                let icon = $("#Username-Icon");
                icon.removeClass("d-none fa-times fa-check");
                icon.addClass("fa-spinner fa-spin");
                $.post(usernameCheckUrl, { username: $(this).val() }, function (response) {
                    if (response) {
                        $("#Username").removeClass("valid");
                        $("#Username").addClass("input-validation-error");
                        $("#Username-Validation").removeClass("field-validation-valid");
                        $("#Username-Validation").addClass("field-validation-error");
                        $("#Username-Validation").html("@SharedLocalizer[@GRA.Annotations.Validate.UsernameTaken]");
                        icon.removeClass("fa-spinner fa-spin");
                        icon.addClass("fa-times");
                    }
                    else {
                        $("#Username-Validation").removeClass("field-validation-valid");
                        $("#Username-Validation").text("The chosen username is available.");
                        icon.removeClass("fa-spinner fa-spin");
                        icon.addClass("fa-check");
                    }
                });
            }
        });

        $("#Username").on("keypress", function () {
            $("#Username-Icon").addClass("d-none");
        });
    </script>
}
