@model GRA.Controllers.ViewModel.Profile.ChangePasswordViewModel

<div class="row">
    <div class="col-xs-12 col-sm-10 offset-sm-1">
        <div class="card">
            <div class="card-header">
                <span class="lead">@SharedLocalizer[GRA.Domain.Model.DisplayNames.MyProfile]</span>
            </div>
            <div class="card-body">

                @await Html.PartialAsync("_ProfilePartial")

                <form asp-controller="Profile" asp-action="ChangePassword" method="post" role="form">
                    <div class="row" style="padding: 10px 0;">
                        <div class="col-xs-12">
                            <input asp-for="HouseholdCount" type="hidden" />
                            <input asp-for="HasAccount" type="hidden" />

                            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                                <div class="row row-spacing">
                                    <div class="col-xs-12">
                                        <p class="text-danger">@Model.ErrorMessage</p>
                                    </div>
                                </div>
                            }

                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="OldPassword" class="col-form-label"></label>
                                    <input asp-for="OldPassword" class="form-control" type="password" />
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="NewPassword" class="col-form-label"></label>
                                    <input asp-for="NewPassword" class="form-control" type="password" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="ConfirmPassword" class="col-form-label"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">@SharedLocalizer[GRA.Annotations.Interface.ChangePassword]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>